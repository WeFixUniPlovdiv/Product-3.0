@using System.Security.Claims
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Склад 2.0</title>
</head>
<style>
    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    footer {
        margin-top: auto;
    }
</style>
<body>

    <header>
        <nav class="navbar navbar-dark navbar-expand-sm navbar-toggleable-sm bg-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-controller="Warehouse" asp-action="Index">Склад 2.0</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-end">
                    @*<ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Warehouse" asp-action="Index">Наличност</a>
                    </li>
                    </ul>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav align-self-end">
                            <li class="nav-item dropdown" text-align:center">
                                <a class="nav-link text-dark bg-light rounded" data-bs-toggle="dropdown" role="button" aria-expanded="false">@User.Identity.Name <i class="bi bi-caret-down"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end align-content-center">
                                    <li>
                                        <div class="card text-center" style="margin-top:-10px;margin-bottom:-10px;">
                                            <div class="card-header text-muted" style="font-size:small;">
                                                Потребител
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title">@User.Identity.Name</h5>
                                                <span class="card-text text-secondary">@User.Claims.First(c => c.Type == ClaimTypes.Email).Value</span>
                                                <a class="btn btn-outline-secondary mt-3" style="align-self:center" href="/Auth/Logout">Logout</a>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="py-3">
        @RenderBody()
    </main>
    <footer class="footer bg-dark text-muted position-relative">
        <div class="container">
            &copy; 2022 - Склад 2.0
        </div>
    </footer>
</body>

@await RenderSectionAsync("Scripts", required: false)
</html>
